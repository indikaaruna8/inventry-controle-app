<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8">
		<meta name="viewport" content="width=device-width, initial-scale=1.0">
		<title>Admin Dashboard</title>
		<!-- Webpack Encore will handle CSS through app.scss -->
		{{ encore_entry_link_tags('app') }}
	</head>
	<body>
		<!-- Top Navigation Bar -->
		<nav class="navbar top-navbar navbar-expand-lg">
			<div
				class="container-fluid">
				<!-- Mobile menu button -->
				<button class="btn btn-link d-lg-none" id="mobile-menu-btn">
					<i class="bi bi-list"></i>
				</button>

				<!-- Logo -->
				<a class="navbar-brand" href="#">
                <img src="logo/logo2.png" height="45px">
                </a>

				<!-- Right side icons -->
				<div
					class="d-flex align-items-center ms-auto">
					<!-- Notification icon -->
					<div class="nav-icon" id="notification-icon">
						<i class="bi bi-bell"></i>
						<span class="notification-badge">3</span>

						<!-- Notification panel -->
						<div class="notification-panel" id="notification-panel">
							<div class="notification-header">Notifications</div>
							<div class="notification-items">
								<div class="notification-item">
									<i class="bi bi-info-circle"></i>
									<div class="notification-content">
										<div>System update completed successfully</div>
										<div class="notification-time">10 minutes ago</div>
									</div>
								</div>
								<div class="notification-item">
									<i class="bi bi-check-circle"></i>
									<div class="notification-content">
										<div>Your profile has been updated</div>
										<div class="notification-time">2 hours ago</div>
									</div>
								</div>
								<div class="notification-item">
									<i class="bi bi-exclamation-triangle"></i>
									<div class="notification-content">
										<div>Server load is high</div>
										<div class="notification-time">5 hours ago</div>
									</div>
								</div>
							</div>
						</div>
					</div>

					<!-- Language dropdown -->
					<div class="nav-item dropdown">
						<a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">
							<i class="bi bi-translate"></i>
						</a>
						<ul class="dropdown-menu dropdown-menu-end">
							<li>
								<a class="dropdown-item" href="#">English</a>
							</li>
							<li>
								<a class="dropdown-item" href="#">Spanish</a>
							</li>
							<li>
								<a class="dropdown-item" href="#">French</a>
							</li>
						</ul>
					</div>

					<!-- Profile dropdown -->
					<div class="nav-item dropdown ms-3">
						<a class="nav-link dropdown-toggle d-flex align-items-center" href="#" role="button" data-bs-toggle="dropdown">
							<img src="https://via.placeholder.com/40" class="profile-img" alt="Profile">
						</a>
						<ul class="dropdown-menu dropdown-menu-end">
							<li>
								<a class="dropdown-item" href="#">
									<i class="bi bi-person me-2"></i>
									View Profile</a>
							</li>
							<li>
								<a class="dropdown-item" href="#">
									<i class="bi bi-gear me-2"></i>
									Settings</a>
							</li>
							<li><hr class="dropdown-divider"></li>
							<li>
								<a class="dropdown-item" href="#">
									<i class="bi bi-box-arrow-right me-2"></i>
									Logout</a>
							</li>
						</ul>
					</div>
				</div>
			</div>
		</nav>

		<!-- Left Navigation Bar -->
		<div class="left-sidebar" id="left-sidebar">
			<div class="sidebar-brand">
				<i class="bi bi-speedometer2 me-2"></i>
				<span>Dashboard</span>
			</div>

			<ul class="sidebar-nav">
				<li class="nav-item">
					<a class="nav-link active" href="#">
						<i class="bi bi-speedometer2"></i>
						<span>Dashboard</span>
					</a>
				</li>

				<li class="nav-item">
					<a class="nav-link" href="#" data-bs-toggle="collapse" data-bs-target="#usersMenu">
						<i class="bi bi-people"></i>
						<span>Users</span>
						<i class="bi bi-chevron-right menu-arrow"></i>
					</a>
					<div class="sub-menu collapse" id="usersMenu">
						<a class="nav-link" href="#">
                            <i class="bi bi-speedometer2"></i> All Users
                        </a>
						<a class="nav-link" href="#">Add New</a>
						<a class="nav-link" href="#">User Roles</a>
					</div>
				</li>

				<li class="nav-item">
					<a class="nav-link" href="#" data-bs-toggle="collapse" data-bs-target="#productsMenu">
						<i class="bi bi-box"></i>
						<span>Products</span>
						<i class="bi bi-chevron-right menu-arrow"></i>
					</a>
					<div class="sub-menu collapse" id="productsMenu">
						<a class="nav-link" href="#">All Products</a>
						<a class="nav-link" href="#">Categories</a>
						<a class="nav-link" href="#">Inventory</a>
					</div>
				</li>

				<li class="nav-item">
					<a class="nav-link" href="#" data-bs-toggle="collapse" data-bs-target="#ordersMenu">
						<i class="bi bi-cart"></i>
						<span>Orders</span>
						<i class="bi bi-chevron-right menu-arrow"></i>
					</a>
					<div class="sub-menu collapse" id="ordersMenu">
						<a class="nav-link" href="#">All Orders</a>
						<a class="nav-link" href="#">Pending</a>
						<a class="nav-link" href="#">Completed</a>
					</div>
				</li>

				<li class="nav-item">
					<a class="nav-link" href="#">
						<i class="bi bi-graph-up"></i>
						<span>Analytics</span>
					</a>
				</li>

				<li class="nav-item">
					<a class="nav-link" href="#">
						<i class="bi bi-gear"></i>
						<span>Settings</span>
					</a>
				</li>
			</ul>
		</div>

		<!-- Right Sidebar -->
		<div class="right-sidebar" id="right-sidebar">
			<div class="right-sidebar-header">
				<h5>Quick Settings</h5>
			</div>
			<div class="right-sidebar-content">
				<div class="mb-4">
					<h6>Theme Settings</h6>
					<div class="form-check form-switch">
						<input class="form-check-input" type="checkbox" id="darkModeSwitch">
						<label class="form-check-label" for="darkModeSwitch">Dark Mode</label>
					</div>
				</div>

				<div class="mb-4">
					<h6>Layout Options</h6>
					<div class="form-check">
						<input class="form-check-input" type="checkbox" id="fixedHeader">
						<label class="form-check-label" for="fixedHeader">Fixed Header</label>
					</div>
				</div>
			</div>
		</div>

		<!-- Main Content -->
		<div class="main-content" id="main-content">
			<div class="container-fluid">
				<div class="d-sm-flex align-items-center justify-content-between mb-4">
					<h1 class="h3 mb-0 text-gray-800">Dashboard</h1>
				</div>

				<div class="row">
					<div class="col-xl-3 col-md-6 mb-4">
						<div class="card border-left-primary h-100 py-2">
							<div class="card-body">
								<div class="row no-gutters align-items-center">
									<div class="col mr-2">
										<div class="text-xs font-weight-bold text-primary text-uppercase mb-1">
											Earnings (Monthly)
										</div>
										<div class="h5 mb-0 font-weight-bold text-gray-800">$40,000</div>
									</div>
									<div class="col-auto">
										<i class="bi bi-calendar-check fa-2x text-gray-300"></i>
									</div>
								</div>
							</div>
						</div>
					</div>

					<div class="col-xl-3 col-md-6 mb-4">
						<div class="card border-left-success h-100 py-2">
							<div class="card-body">
								<div class="row no-gutters align-items-center">
									<div class="col mr-2">
										<div class="text-xs font-weight-bold text-success text-uppercase mb-1">
											Earnings (Annual)
										</div>
										<div class="h5 mb-0 font-weight-bold text-gray-800">$215,000</div>
									</div>
									<div class="col-auto">
										<i class="bi bi-currency-dollar fa-2x text-gray-300"></i>
									</div>
								</div>
							</div>
						</div>
					</div>

					<div class="col-xl-3 col-md-6 mb-4">
						<div class="card border-left-info h-100 py-2">
							<div class="card-body">
								<div class="row no-gutters align-items-center">
									<div class="col mr-2">
										<div class="text-xs font-weight-bold text-info text-uppercase mb-1">
											Tasks
										</div>
										<div class="row no-gutters align-items-center">
											<div class="col-auto">
												<div class="h5 mb-0 mr-3 font-weight-bold text-gray-800">50%</div>
											</div>
											<div class="col">
												<div class="progress progress-sm mr-2">
													<div class="progress-bar bg-info" role="progressbar" style="width: 50%" aria-valuenow="50" aria-valuemin="0" aria-valuemax="100"></div>
												</div>
											</div>
										</div>
									</div>
									<div class="col-auto">
										<i class="bi bi-clipboard-check fa-2x text-gray-300"></i>
									</div>
								</div>
							</div>
						</div>
					</div>

					<div class="col-xl-3 col-md-6 mb-4">
						<div class="card border-left-warning h-100 py-2">
							<div class="card-body">
								<div class="row no-gutters align-items-center">
									<div class="col mr-2">
										<div class="text-xs font-weight-bold text-warning text-uppercase mb-1">
											Pending Requests
										</div>
										<div class="h5 mb-0 font-weight-bold text-gray-800">18</div>
									</div>
									<div class="col-auto">
										<i class="bi bi-chat-left-text fa-2x text-gray-300"></i>
									</div>
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>

		<!-- Footer -->
		<footer class="footer">
			<div class="container-fluid">
				<div class="d-sm-flex justify-content-between align-items-center">
					<div class="copyright-text">
						&copy; 2023 AdminPanel. All rights reserved.
					</div>
					<div class="footer-links">
						<a href="#">Privacy Policy</a>
						<a href="#">Terms of Use</a>
						<a href="#">Support</a>
					</div>
				</div>
			</div>
		</footer>
		{{ encore_entry_script_tags('app') }}
	</body>
</html>
